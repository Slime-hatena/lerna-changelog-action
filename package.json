{
    "name": "lerna-changelog-action",
    "version": "0.0.0",
    "private": true,
    "description": "Generating a changelog via lerna-changelog",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write **/*.ts",
        "format-check": "prettier --check **/*.ts",
        "lint": "eslint src/**/*.ts",
        "package": "ncc build --source-map --license licenses.txt",
        "test": "jest",
        "all": "yarn run build && yarn run format && yarn run lint && yarn run package && yarn run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Slime-hatena/lerna-changelog-action"
    },
    "keywords": [
        "actions",
        "node",
        "setup"
    ],
    "author": "Slime-hatena",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.5.0",
        "lerna-changelog": "^2.1.0"
    },
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "@types/node": "^16.7.8",
        "@typescript-eslint/parser": "^4.29.3",
        "@vercel/ncc": "^0.30.0",
        "eslint": "^7.32.0",
        "eslint-plugin-github": "^4.2.0",
        "eslint-plugin-jest": "^24.4.2",
        "jest": "^26.6.3",
        "jest-circus": "^27.1.0",
        "js-yaml": "^4.1.0",
        "prettier": "2.3.2",
        "ts-jest": "^26.5.6",
        "typescript": "^4.3.5"
    }
}
